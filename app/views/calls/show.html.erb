<h2><%= @page_title = "Visualizar Ligação" %></h2><hr />

<% if notice %>
  <div class="alert green fade in">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% end %>

<%= form_for @call, :html => {:class => "form-horizontal"} do |f| -%>

  <%= render(:partial => 'form', :locals => {:f => f, :readonly => true}) %>   
  
  <div class="control-group">
    <div class="controls">
      <% link = ''
       if cookies[:access_level] == 'CMRGAR' 
      		link = 'Editar Ligação' 
      	else 
      		link = 'Alterar Status' 
      	end%> 
      	<%= link_to link, {:action => 'edit', :id => @call.id}, :class => "btn btn-small dark-blue" %>
  </div>
  
<% end %>

<br />
<%= link_to 'Ir para a lista de Ligações', calls_path, :class => "btn btn-small light-blue inverse" %>&nbsp; &nbsp;&nbsp;
<% if cookies[:access_level] == 'CMRGAR' %> 
	<%= link_to 'Agendar Ligação', new_call_path, :class => "btn btn-small light-blue inverse" %>
<%end%>
