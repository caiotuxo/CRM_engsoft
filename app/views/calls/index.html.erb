<h1>Listing calls</h1>

<table>
  <tr>
    <th>Reason</th>
    <th>Comments</th>
    <th>Status</th>
    <th>Call date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @calls.each do |call| %>
  <tr>
    <td><%= call.reason %></td>
    <td><%= call.comments %></td>
    <td><%= call.status %></td>
    <td><%= call.call_date %></td>
    <td><%= link_to 'Show', call %></td>
    <td><%= link_to 'Edit', edit_call_path(call) %></td>
    <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

