<h2><%= @page_title = "Visualizar Cliente" %></h2><hr />

<div class="form-horizontal">
	<div class="control-group">
		<label class="control-label strong">Nome</label>
		<div class="controls">
			<label class="control-label-desc"><%= @client.nome %></label>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label strong">Login</label>
		<div class="controls">
			<label class="control-label-desc"><%= @client.login %></label>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label strong">E-mail</label>
		<div class="controls">
			<label class="control-label-desc"><%= @client.email %></label>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label strong">Telefone</label>
		<div class="controls">
			<label class="control-label-desc"><%= @client.telefone %></label>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label strong">Celular</label>
		<div class="controls">
			<label class="control-label-desc"><%= @client.celular %></label>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label strong">Endereço</label>
		<div class="controls">
			<label class="control-label-desc"><%= @client.endereco %></label>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label strong">Tipo de cliente</label>
		<div class="controls">
			<label class="control-label-desc"><%= Client.client_labels[@client.client_type] %></label>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label strong">Instituição/Empresa</label>
		<div class="controls">
			<label class="control-label-desc"><%= @client.instituicao %></label>
		</div>
	</div>   
</div>

<%= link_to ' Importar cliente para a base de contatos...', {:controller => 'contacts', :action => 'new', :client => @client.to_json}, :class => "icon-circle-arrow-down btn btn-small light-blue inverse", :title => "Importar cliente para a base de contatos..." %>
<br />

<br />
