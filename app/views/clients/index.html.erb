<div class="box bordered" style="position:relative;">
	<div class="box-header" >
		<i class="icon-th-list"></i><%= @page_title = "Clientes" %>
	</div>

	<table class="table table-striped data-table">
		<thead>
			<tr>
				<th>Ações</th>
			    <th>Nome</th>
			    <th>E-mail</th>
				<th>Telefone</th>
				<th>Tipo de cliente</th>
				<th>Instituição/Empresa</th>
			</tr>
		</thead>
		<tbody>
			<% @clients.each do |k, client| %>
			  <tr>
  			    <td class="td-actions">
  			        <%= link_to '', {:action => 'show', :id => client._id}, :class => "icon-eye-open", :title => "Visualizar" %>
					<%= link_to '', {:controller => 'contacts', :action => 'new', :client => client.to_json}, :class => "icon-circle-arrow-down", :title => "Importar cliente para a base de contatos..." %>
  				</td>
			    <td><%= client.nome %></td>
			    <td><%= client.email %></td>
				<td><%= client.telefone %></td>
				<td><%= Client.client_labels[client.clientType] %></td>
				<td><%= client.instituicao %></td>
			  </tr>
			<% end %>
		</tbody>
	</table>
</div>

<br />
