<% readonly ||= false %>
<%= error_messages_for(@subject) %>

<div class="control-group">
    <%= f.label :subject, "Tópico", :class => "control-label strong" %>
	<div class="controls">
      <%= f.text_field :subject, :placeholder => "Tópico", :readonly => readonly %>
    </div>
</div>
<div class="control-group">
	<%= f.label :description, "Descrição", :class => "control-label strong" %>
	<div class="controls">
	  <%= f.text_field :description, :placeholder => "Descrição", :readonly => readonly %>
    </div>
</div>
<% if not @lista_faqs.nil? %>
<div class="control-group">
	<%= label_tag "faqs", "Lista de FAQs", :class => "control-label strong" %>
	<div class="controls">
		<%= label_tag "faqs", @lista_faqs, :class => "control-label-desc" %>
    </div>
</div>
<% end %>
