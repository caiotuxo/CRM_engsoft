<h2><%= @page_title = "Novo Tópico" %></h2><hr />

<%= form_for @subject, :validate => true, :html => {:class => "form-horizontal"} do |f| %>
  
  <%= render(:partial => 'form', :locals => {:f => f}) %>    
  <div class="control-group">
    <div class="controls">
      <%= f.submit("Criar Tópico", :class => "btn btn-small dark-blue") %>
    </div>
  </div>
<% end %>

<%= link_to 'Ir para a lista de tópicos', subjects_path, :class => "btn btn-small light-blue inverse" %>
