<div class="box bordered" style="position:relative;">
	<div class="box-header" >
		<i class="icon-th-list"></i><%= @page_title = "Perguntas e Respostas" %>
	</div>

	<table class="table table-striped data-table">
		<thead>
			<tr>
			    <th>Pergunta</th>
			    <th>Resposta</th>
			    <th>Assunto</th>
			    <th>Ações</th>
			</tr>
		</thead>
		<tbody>
			<% @faqs.each do |faq| %>
			  <tr>
			    <td><%= faq.question %></td>
			    <td><%= faq.answer %></td>
			    <td><%= faq.subject.subject %>
				    (Desc: <%= faq.subject.description %>)</td>
			    <td class="td-actions">
					<%= link_to 'Visualizar', {:action => 'show', :id => faq.id}, :class => "btn btn-small dark-blue" %>&nbsp;
					<%= link_to 'Editar', {:action => 'edit', :id => faq.id}, :class => "btn btn-small dark-blue" %>&nbsp;
					<%= link_to 'Remover', {:action => 'delete', :id => faq.id}, :class => "btn btn-small dark-blue" %>
				</td>
			  </tr>
			<% end %>
		</tbody>
	</table>
</div>

<br />

<%= link_to 'Nova pergunta', new_faq_path, :class => "btn btn-small light-blue inverse" %>