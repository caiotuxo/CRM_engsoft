<% readonly ||= false %>
<%= error_messages_for(@faq) %>

<div class="control-group">
	<%= f.label :assunto_id, "Tópico", :class => "control-label strong" %>
	<div class="controls">
      <%= f.select :assunto_id, @subjects.collect {|s| [s.subject, s.id]}, {}, :disabled => readonly %>&nbsp;
	  <%= link_to '', {:controller => 'subjects', :action => 'new'}, {:class => "icon-plus-sign", :target => '_new', :style => "font-size:20px"} %>
    </div>
</div>
<div class="control-group">
    <%= f.label :pergunta, "Dúvida", :class => "control-label strong" %>
	<div class="controls">
      <%= f.text_field :pergunta, :placeholder => "Dúvida", :readonly => readonly, :style => "width: 700px;" %>
    </div>
</div>
<div class="control-group">
	<%= f.label :resposta, "Resposta", :class => "control-label strong" %>
	<div class="controls">
	  <%= f.text_area :resposta, :placeholder => "Resposta", :readonly => readonly, :style => "height:200px; width: 700px;" %>
    </div>
</div>
