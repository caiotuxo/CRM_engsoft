<h2><%= @page_title = "Visualizar Banner" %></h2><hr />

<% if notice %>
  <div class="alert green fade in">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% end %>

<%= form_for @banner, :html => {:class => "form-horizontal", :multipart => true} do |f| -%>

  <%= render(:partial => 'form', :locals => {:f => f, :readonly => true}) %>    
  <div class="control-group">
    <div class="controls">
      <%= link_to 'Editar Banner', {:action => 'edit', :id => @banner.id}, :class => "btn btn-small dark-blue" %>
  </div>
<% end %>

<br />
<%= link_to 'Ir para a lista de Ligações', banners_path, :class => "btn btn-small light-blue inverse" %>&nbsp; &nbsp;&nbsp;
<%= link_to 'Novo Banner', new_banner_path, :class => "btn btn-small light-blue inverse" %>
