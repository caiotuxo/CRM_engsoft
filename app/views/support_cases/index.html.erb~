    </td>
  </tr>
	  <% end %> 
  <tr>
    <th>Creationdate</th>
    <th>Casecode</th>
    <th>Description</th>
    <th>CaseType</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @support_cases.each do |support_case| %>
  <tr>
    <td><%= support_case.creationDate %></td>
    <td><%= support_case.caseCode %></td>
    <td><%= support_case.description %></td>
    <td><%= support_case.caseType %></td>
    <td><%= support_case.status %></td>
    <td><%= link_to 'Show', support_case %></td>
    <td><%= link_to 'Edit', edit_support_case_path(support_case) %></td>
    <td><%= link_to 'Destroy', support_case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
